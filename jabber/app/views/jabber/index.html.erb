<% if user_signed_in? %>
  <%= render 'user/info' %>
  <%= simple_form_for @jabber, :html=> { class: 'wrapper' } do |f| %>
    <%= f.input :message, label: "Your message:", as: :text, :input_html => {:rows => 5, :cols => 40} %>
    <%= f.button :submit, "Jabber!!" %>
  <% end %>
  <%= render 'jabber' %>
<% end %>
